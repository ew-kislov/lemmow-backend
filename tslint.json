{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "semicolon": true,
        "quotemark": [ true, "single" ],
        "trailing-comma": false,
        "space-in-brackets": ["error", "always"]
    },
    "rulesDirectory": []
}